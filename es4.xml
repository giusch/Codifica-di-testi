<?xml version = "1.0" encoding= "utf-8"?>
<!DOCTYPE TEI [
   <!ELEMENT TEI (header+|facsimile*|text+)>
   <!ELEMENT header (#PCDATA)>
   <!ELEMENT facsimile (#PCDATA)>
   <!ELEMENT text (#PCDATA)>
] >
<TEI>
  <header>cinema</header>
  <facsimile>casa</facsimile>
  <text>famiglia</text>
</TEI>
